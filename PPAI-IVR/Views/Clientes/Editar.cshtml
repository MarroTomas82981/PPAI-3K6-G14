@using PPAI_IVR.Models.Clases;
@model Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h1>Eeditar Tipo Cuenta: @Model.NombreCompleto</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Editar">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="NombreCompleto" class="form-label"></label>
        <input type="text" asp-for="NombreCompleto" class="form-control" />
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Dni" class="form-label"></label>
        <input type="number" asp-for="Dni" class="form-control" />
        <span asp-validation-for="Dni" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="nroCelular" class="form-label"></label>
        <input type="number" asp-for="nroCelular" class="form-control" />
        <span asp-validation-for="nroCelular" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}